{
  "name": "contracts-sdk",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "root": "packages/libs/contracts-sdk",
  "sourceRoot": "packages/libs/contracts-sdk/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "clean": {},
    "test-e2e": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/test-output/jest/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.js"
      }
    },
    "build:tsc": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "assets": ["{projectRoot}/*.md", "{projectRoot}/abis/**"],
        "target": "es2020",
        "formats": ["cjs"]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build:tsc"],
      "options": {
        "commands": [
          {
            "command": "echo 'ü™ù Running post-build script'"
          }
        ]
      }
    }
  }
}
