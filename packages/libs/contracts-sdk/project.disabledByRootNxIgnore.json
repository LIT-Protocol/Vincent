{
  "name": "contracts-sdk",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/libs/contracts-sdk/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "clean": {},
    "pre-build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "echo 'ü™ù Running pre-build script' && bun run ./packages/libs/contracts-sdk/src/scripts/cast-any-to-create-contracts.ts"
          }
        ]
      }
    },
    "build:tsc": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["pre-build"],
      "options": {
        "outputPath": "packages/libs/contracts-sdk/dist",
        "main": "packages/libs/contracts-sdk/index.ts",
        "tsConfig": "packages/libs/contracts-sdk/tsconfig.lib.json",
        "assets": ["packages/libs/contracts-sdk/*.md"],
        "target": "es2020",
        "formats": ["cjs"]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build:tsc"],
      "options": {
        "commands": [
          {
            "command": "echo 'ü™ù Running post-build script' && bun run ./packages/libs/contracts-sdk/src/scripts/revert-any-from-create-contracts.ts"
          }
        ]
      }
    }
  }
}
