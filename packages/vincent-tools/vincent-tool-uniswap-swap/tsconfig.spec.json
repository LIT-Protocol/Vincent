{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/jest",
    "module": "commonjs",
    "moduleResolution": "node10",
    "types": ["jest", "node"],
    "esModuleInterop": true
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "test-e2e/**/*.ts"
  ]
}
