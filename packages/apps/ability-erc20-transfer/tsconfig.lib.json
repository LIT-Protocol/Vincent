    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "emitDeclarationOnly": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "esModuleInterop": true
  },
  "include": ["global.d.ts", "src/**/*.ts", "src/generated/vincent-ability-metadata.json"],
  "references": [
    {
      "path": "../../libs/ability-sdk/tsconfig.lib.json"
    },
    {
      "path": "../policy-send-counter/tsconfig.lib.json"
    },
    {
      "path": "../../libs/app-sdk/tsconfig.lib.json"
    }
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
