{
  "name": "ability-aave-smart-account",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "library",
  "targets": {
    "clean": {},
    "action:build": {
      "executor": "nx:run-commands",
      "dependsOn": ["ability-sdk:build"],
      "options": {
        "commands": ["pnpm node ./esbuild.config.js"],
        "cwd": "packages/apps/ability-aave-smart-account",
        "parallel": false
      }
    },
    "action:deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["action:build"],
      "options": {
        "commands": ["node scripts/deploy-lit-action.js"],
        "cwd": "packages/apps/ability-aave-smart-account"
      }
    },
    "action:only:deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["node scripts/deploy-lit-action.js"],
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "dependsOn": ["action:build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/apps/ability-aave-smart-account/dist",
        "main": "packages/apps/ability-aave-smart-account/src/index.ts",
        "tsConfig": "packages/apps/ability-aave-smart-account/tsconfig.lib.json",
        "assets": [
          "packages/apps/ability-aave-smart-account/*.md",
          {
            "glob": "**/*",
            "input": "packages/apps/ability-aave-smart-account/src/generated",
            "output": "src/generated"
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "dependsOn": ["build"],
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/test/jest.config.js",
        "testMatch": ["<rootDir>/unit/**/*.spec.ts"]
      }
    },
    "test-e2e": {
      "executor": "@nx/jest:jest",
      "dependsOn": ["build", "action:deploy"],
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/test/jest.config.js",
        "testMatch": ["<rootDir>/integration/**/*.spec.ts"]
      }
    }
  }
}
