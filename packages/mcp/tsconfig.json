{
  "extends": ["@tsconfig/node20/tsconfig.json"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "strictNullChecks": true,
  "allowJs": true,
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
