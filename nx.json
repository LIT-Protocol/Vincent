{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s"
    ],
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"]
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "jest:test"
      }
    }
  ],
  "release": {
    "projects": ["vincent-sdk", "vincent-mcp", "vincent-rest-api"],
    "projectsRelationship": "independent",
    "releaseTagPattern": "vincent/{projectName}/{version}",
    "versionPlans": true,
    "changelog": {
      "automaticFromRef": true,
      "projectChangelogs": true
    },
    "version": {
      "preVersionCommand": "pnpm dlx nx run-many --target=build --projects=vincent-sdk,vincent-mcp,vincent-rest-api --parallel=false"
    },
    "git": {
      "tagArgs": "-f",
      "pushArgs": "--force-with-lease"
    }
  },
  "targetDefaults": {
    "nx-release-publish": {
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        },
        {
          "projects": "self",
          "target": "publish-typedoc"
        }
      ]
    },
    "@nx/esbuild:esbuild": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "test": {
      "dependsOn": ["^build"]
    }
  },
  "projects": {
    "vincent-policy-spending-limit": {
      "sourceRoot": "packages/vincent-tools/vincent-policy-spending-limit/src",
      "projectType": "library",
      "targets": {
        "action:build": {
          "executor": "nx:run-commands",
          "dependsOn": ["vincent-tool-sdk:build"],
          "options": {
            "commands": ["pnpm node ./esbuild.config.js"],
            "cwd": "packages/vincent-tools/vincent-policy-spending-limit",
            "parallel": false
          }
        },
        "action:deploy": {
          "executor": "nx:run-commands",
          "dependsOn": ["action:build"],
          "options": {
            "commands": ["node tools/scripts/deploy-lit-action.js"],
            "cwd": "packages/vincent-tools/vincent-policy-spending-limit"
          }
        },
        "build": {
          "executor": "@nx/js:tsc",
          "dependsOn": ["action:build"],
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "packages/vincent-tools/vincent-policy-spending-limit/dist",
            "main": "packages/vincent-tools/vincent-policy-spending-limit/src/index.ts",
            "tsConfig": "packages/vincent-tools/vincent-policy-spending-limit/tsconfig.lib.json",
            "assets": [
              "packages/vincent-tools/vincent-policy-spending-limit/*.md",
              {
                "glob": "**/*",
                "input": "packages/vincent-tools/vincent-policy-spending-limit/src/generated",
                "output": "src/generated"
              }
            ]
          }
        },
        "publish": {
          "executor": "@nx/js:npm-publish",
          "dependsOn": ["deploy"],
          "options": {
            "packageRoot": "dist"
          }
        }
      }
    },
    "vincent-tool-erc20-approval": {
      "sourceRoot": "packages/vincent-tools/vincent-tool-erc20-approval/src",
      "projectType": "library",
      "targets": {
        "action:build": {
          "executor": "nx:run-commands",
          "dependsOn": ["vincent-tool-sdk:build"],
          "options": {
            "commands": ["pnpm node ./esbuild.config.js"],
            "cwd": "packages/vincent-tools/vincent-tool-erc20-approval",
            "parallel": false
          }
        },
        "action:deploy": {
          "executor": "nx:run-commands",
          "dependsOn": ["action:build"],
          "options": {
            "commands": ["node tools/scripts/deploy-lit-action.js"],
            "cwd": "packages/vincent-tools/vincent-tool-erc20-approval"
          }
        },
        "build": {
          "executor": "@nx/js:tsc",
          "dependsOn": ["action:build"],
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "packages/vincent-tools/vincent-tool-erc20-approval/dist",
            "main": "packages/vincent-tools/vincent-tool-erc20-approval/src/index.ts",
            "tsConfig": "packages/vincent-tools/vincent-tool-erc20-approval/tsconfig.lib.json",
            "assets": [
              "packages/vincent-tools/vincent-tool-erc20-approval/*.md",
              {
                "glob": "**/*",
                "input": "packages/vincent-tools/vincent-tool-erc20-approval/src/generated",
                "output": "src/generated"
              }
            ]
          }
        },
        "publish": {
          "executor": "@nx/js:npm-publish",
          "dependsOn": ["deploy"],
          "options": {
            "packageRoot": "dist"
          }
        }
      }
    },
    "vincent-tool-uniswap-swap": {
      "sourceRoot": "packages/vincent-tools/vincent-tool-uniswap-swap/src",
      "projectType": "library",
      "targets": {
        "action:build": {
          "executor": "nx:run-commands",
          "dependsOn": ["vincent-tool-sdk:build", "vincent-policy-spending-limit:build"],
          "options": {
            "commands": ["pnpm node ./esbuild.config.js"],
            "cwd": "packages/vincent-tools/vincent-tool-uniswap-swap",
            "parallel": false
          }
        },
        "action:deploy": {
          "executor": "nx:run-commands",
          "dependsOn": ["action:build"],
          "options": {
            "commands": ["node tools/scripts/deploy-lit-action.js"],
            "cwd": "packages/vincent-tools/vincent-tool-uniswap-swap"
          }
        },
        "build": {
          "executor": "@nx/js:tsc",
          "dependsOn": ["action:build"],
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "packages/vincent-tools/vincent-tool-uniswap-swap/dist",
            "main": "packages/vincent-tools/vincent-tool-uniswap-swap/src/index.ts",
            "tsConfig": "packages/vincent-tools/vincent-tool-uniswap-swap/tsconfig.lib.json",
            "assets": [
              "packages/vincent-tools/vincent-tool-uniswap-swap/*.md",
              {
                "glob": "**/*",
                "input": "packages/vincent-tools/vincent-tool-uniswap-swap/src/generated",
                "output": "src/generated"
              }
            ]
          }
        },
        "publish": {
          "executor": "@nx/js:npm-publish",
          "dependsOn": ["deploy"],
          "options": {
            "packageRoot": "dist"
          }
        }
      }
    }
  }
}
