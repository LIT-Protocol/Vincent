{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s"
    ],
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"]
  },
  "cli": {
    "packageManager": "pnpm"
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      }
    },
    {
      "plugin": "@nx/rollup/plugin",
      "options": {
        "buildTargetName": "build",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    }
  ],
  "workspaceLayout": {
    "appsDir": "packages/apps",
    "libsDir": "packages/libs"
  },
  "release": {
    "projects": [
      "tool-sdk",
      "app-sdk",
      "registry-sdk",
      "registry-backend",
      "policy-spending-limit",
      "tool-erc20-approval",
      "tool-uniswap-swap"
    ],
    "projectsRelationship": "independent",
    "releaseTagPattern": "vincent/{projectName}/{version}",
    "versionPlans": true,
    "changelog": {
      "projectChangelogs": true
    },
    "version": {
      "preVersionCommand": "pnpm dlx nx run-many --target=build --all"
    }
  },
  "targetDefaults": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["rm -rf ./node_modules", "rm -rf ./dist"],
        "cwd": "{projectRoot}"
      }
    },
    "flag": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm lit-flags --configPath ./src/features"],
        "cwd": "{projectRoot}",
        "tty": true,
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "nx-release-publish": {
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        },
        {
          "projects": "self",
          "target": "publish-typedoc"
        }
      ]
    },
    "@nx/esbuild:esbuild": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "build": {
      "inputs": ["{projectRoot}/src/**/*"],
      "dependsOn": ["^build"]
    }
  }
}
